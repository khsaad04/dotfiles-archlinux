#! /bin/sh

chosen=$(printf "Alacritty\nBspwm\nDunst\nNeofetch\nNeovim\nPolybar\nRofi\nSxhkd\nZsh\nVim" | rofi -dmenu -i -p "Configs: ")

case "$chosen" in
	"Alacritty") alacritty -e nvim ~/.config/alacritty/alacritty.yml ;;
	"Bspwm") alacritty -e nvim ~/.config/bspwm/bspwmrc ;;
	"Dunst") alacritty -e nvim ~/.config/dunst/dunstrc ;;
	"Neofetch") alacritty -e nvim ~/.config/neofetch/config.conf ;;
	"Neovim") alacritty -e nvim ~/.config/nvim/init.vim ;;
	"Polybar") configmenu2 ;;
	"Rofi") alacritty -e nvim ~/.config/rofi/config.rasi ;;
	"Sxhkd") alacritty -e nvim ~/.config/sxhkd/sxhkdrc ;;
	"Zsh") alacritty -e nvim ~/.zshrc ;;
	"Vim") alacritty -e nvim ~/.vimrc ;;
	*) exit 1 ;;
esac
