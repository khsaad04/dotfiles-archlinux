#! /bin/bash

chosen=$(printf "Config.ini\nColors.ini\nModules.ini\nLaunch.sh" | rofi -dmenu -i -p "Polybar configs: ")

case "$chosen" in
	"Config.ini") alacritty -e nvim ~/.config/polybar/config.ini ;;
	"Colors.ini") alacritty -e nvim ~/.config/polybar/colors.ini ;;
	"Modules.ini") alacritty -e nvim ~/.config/polybar/modules.ini ;;
	"Launch.sh") alacritty -e nvim ~/.config/polybar/launch.sh ;;
	*) exit 1 ;;

esac
