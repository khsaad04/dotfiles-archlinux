#!/bin/bash

entries=" Shutdown\n⏾ Suspend\n󰒲 Hibernate\n Reboot"

selected=$(echo -e $entries|wofi --dmenu --cache-file /dev/null | awk '{print tolower($2)}')

case $selected in
    shutdown)
        shutdown now;;
    suspend)
        systemctl suspend;;
    hibernate)
        systemctl hibernate;;
    reboot)
        reboot;;
esac
