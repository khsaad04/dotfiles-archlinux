set drawbox
set hidden
set icons
set ignorecase
set preview
set sixel

cmd delete ${{
  set -f
  printf "$fx\n"
  printf "delete?[y/n]"
  read ans
  [ "$ans" = "y" ] && rm -rf $fx
}}

cmd open ${{
  case $(file --mime-type -Lb $f) in
  text/*) lf -remote "send $id \$$EDITOR \$fx";;
  *) for f in $fx; do $OPENER "$f" > /dev/null 2> /dev/null & done;;
  esac
}}

map <delete> delete
map <enter> open

set previewer previewer
map i $previewer "$f" | less -R
